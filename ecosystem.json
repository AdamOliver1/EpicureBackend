{
    "apps": [
		{
			"name": "EpicureBackend",


			"script": "./node_modules/.bin/ts-node",
			"args": "index.ts",
			"env": {
				"NODE_ENV": "development"
			}
		}
	],
	"deploy": {
		"production": {
			"key": "~/.ssh/epicure-key.pem",
			"user": "ubuntu",


			"host": ["ec2-18-182-30-33.ap-northeast-1.compute.amazonaws.com"],


			"ref": "origin/main",


			"repo": "git@github.com:adammoveo/EpicureBackend.git",


			"path": "/home/ubuntu/EpicureBackend",


			"ssh_options": "StrictHostKeyChecking=no",


			"post-deploy": "mkdir -p logs && npm i && pm2 reload ecosystem.json --env staging",


			"pre-deploy-local": "echo 'Deploying code to servers'",
			"env": {
				"NODE_ENV": "production"
			}
		}
	}
}


